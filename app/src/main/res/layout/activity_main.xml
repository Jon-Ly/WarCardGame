<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jonly.warcardgame.MainActivity">

    <ImageView
        android:id="@+id/card1"
        android:layout_width="73dp"
        android:layout_height="95dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="32dp"
        android:text="Card 1"
        android:padding="2dp"
        android:onClick="selectCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/card2"
        android:layout_width="73dp"
        android:layout_height="95dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Card 2"
        android:padding="2dp"
        android:onClick="selectCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/card3"
        app:layout_constraintStart_toEndOf="@+id/card1" />

    <ImageView
        android:id="@+id/card3"
        android:layout_width="73dp"
        android:layout_height="95dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:text="Card 3"
        android:padding="2dp"
        android:onClick="selectCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Scoreboard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cards_remaining_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="8dp"
        android:text="Cards Remaining"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score_background"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score_label"
        android:background="@color/colorBlack"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cards_remaining_label"
        android:background="@color/colorBlack"/>

    <TextView
        android:id="@+id/score_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Score"
        app:layout_constraintStart_toStartOf="@+id/score_background"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorTeal"/>

    <TextView
        android:id="@+id/score_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:text="Score"
        android:textColor="@color/colorRed"
        app:layout_constraintEnd_toEndOf="@+id/score_background"
        app:layout_constraintStart_toEndOf="@+id/score_left"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cards_remaining_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Score"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorTeal"/>

    <TextView
        android:id="@+id/cards_remaining_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:text="Score"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/cards_remaining_left"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorRed"/>

    <ImageView
        android:id="@+id/played_card_left"
        android:layout_width="73dp"
        android:layout_height="95dp"
        android:layout_marginBottom="200dp"
        android:layout_marginStart="75dp"
        android:text="Played Card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/played_card_right"
        android:layout_width="73dp"
        android:layout_height="95dp"
        android:layout_marginBottom="200dp"
        android:layout_marginEnd="75dp"
        android:text="Played Card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/math_war_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:text="Math War"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/equation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Equation"
        app:layout_constraintBottom_toTopOf="@+id/math_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/math_war_label" />

    <EditText
        android:id="@+id/math_input"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="325dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/math_input_button"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginBottom="325dp"
        android:layout_marginEnd="140dp"
        android:text="Ok"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/math_input" />

</android.support.constraint.ConstraintLayout>
